echo debugging be ...
rm -f $HOME/.beexit
mk_backup_file __be_test.log
if [ -f ./be ]; then
  ##./be --version
  ##./be "$@"
  ./be -d "$@"
  #./be -d -l "$@"
  ##LANG=C.UTF-8 ./be -d "$@"
  ##LANG=C ./be -d "$@"
  ##./be -c -d "$@"
  if [ ! -f $HOME/.beexit ]; then
    mv -f __be_test.log
  fi
fi 2>__be_test.log

rt
